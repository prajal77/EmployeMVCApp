@model IEnumerable<EmployeMVC.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                PhoneNo
            </th>
            <th>
                Address
            </th>
            <th>
                Department
            </th>
            <th>
                Designation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                    @item.Address
            </td>
            <td>
               @item.PhoneNo
            </td>
            <td>
                @item.Email
            </td>
            <td>
                    @(item.Department != null ? item.Department.Name : "No Department")
            </td>
            <td>
                    @(item.Department != null ? item.Designation.Name : "No Designation")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
